<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tek3.restaurant" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar"
        android:screenOrientation="portrait">

        <activity
            android:name=".views.UserSelect"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.CodeValidation"
            android:label="@string/title_activity_code_validation"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".views.Login"
            android:label="@string/title_activity_login"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".views.Sponsor"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".views.RestaurantDetails"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait"/>
        <activity android:name=".views.RestaurantCategories" />
    </application>

</manifest>
